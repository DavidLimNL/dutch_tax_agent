# LLM Configuration
# Provider: "openai" or "ollama"
LLM_PROVIDER=openai
# Optional: Model name (uses provider default if not set)
# LLM_MODEL=gpt-4o-mini

# Ollama Configuration (commented out by default)
# LLM_PROVIDER=ollama
# LLM_MODEL=llama3.2
# OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Configuration (for backward compatibility)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# LangSmith Configuration (optional)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=dutch-tax-agent
LANGSMITH_TRACING=false
# LANGSMITH_ENDPOINT=https://eu.smith.langchain.com

# ECB Configuration (optional, falls back to cached rates)
ECB_API_KEY=
ECB_RATE_CACHE_DAYS=7

# Application Configuration
LOG_LEVEL=INFO
MAX_DOCUMENT_SIZE_MB=10
PDF_MIN_CHARS=50
SUPPORTED_TAX_YEARS=2022,2023,2024,2025

# Document Processing
ENABLE_PARALLEL_PARSING=true
MAX_PARALLEL_DOCS=10
